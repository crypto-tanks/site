
{% for item in items %}
    <div class="col mb-4">
        <div class="card">
            <div class="p-3 mb-0">
                <img src="nft/promo_{{ item.template_id }}.jpg" class="card-img-top" alt="COMMON TANK NORMAL">
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ item.header }}</h5>
                <ul class="list-group mb-3">
                    {% for param in item.params %}
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 py-2 px-0">
                            {{ param.header }}
                            <span>{{ param.value }}</span>
                        </li>
                    {% endfor %}
                </ul>
                <button type="button" class="btn btn-warning btn-block mb-3" onclick="eth.pay('{{ item.template_id }}')" >Купить за {{ prices[item.template_id] }} BNB</button>
                <p class="card-text">{{ item.description }}</p>
            </div>
            <div class="card-footer">
                <small class="text-muted">В вашем владении: <span data-interactive="nft-id{{ item.template_id }}"></span></small>
            </div>
        </div>
    </div>
{% endfor %}